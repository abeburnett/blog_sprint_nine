= form_for @post do |f|
  - @post.errors.any? do |msg|
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |msg|
          %li
            = msg

  %p
    = f.label :title
    = f.text_field :title
  %p
    = f.label :text
    = f.text_area :text
  %p
    = f.submit

= link_to 'Back', posts_path
